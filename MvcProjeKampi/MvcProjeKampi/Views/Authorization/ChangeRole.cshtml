
@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "ChangeRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Admin Yetkisi Değiştir</h2>
<hr />

@using (Html.BeginForm("ChangeRole", "Authorization", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Admin Mail")
        @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Şifre")
        @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.Label("Yetki")
        @Html.TextBoxFor(x => x.Role, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Yeki Değiştir</button>

}