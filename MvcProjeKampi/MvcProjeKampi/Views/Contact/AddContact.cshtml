
@model EntityLayer.Concrete.Contact

<section class="contact py-lg-5 py-md-5 py-3" id="contact">
    <div class="container">
        <div class="inner-sec-w3ls py-lg-5 py-3">
            <h3 class="tittle-w3 text-uppercase mb-lg-5 mb-3 text-center text-white">İLETİŞİM</h3>

            <div class="contact_grid_right">
                <form action="/Contact/AddContact/" method="post">
                    <div class="row contact_left_grid">
                        <div class="col-md-6 con-left" data-aos="fade-up">
                            <div class="form-group">

                                <input class="form-control" type="text" name="UserName" placeholder="Adınız" required>
                            </div>
                            <div class="form-group">

                                <input class="form-control" type="email" name="Mail" placeholder="Mail Adresiniz" required>
                            </div>
                            <div class="form-group">

                                <input class="form-control" type="text" name="Subject" placeholder="Konu" required>
                            </div>
                        </div>
                        <div class="col-md-6 con-right" data-aos="fade-up">
                            <div class="form-group">
                                <textarea id="textarea" placeholder="Mesaj" name="Message" required></textarea>
                            </div>
                        </div>
                        <div class="sub-honey mx-auto mt-3">
                            <button type="submit" id="btn1" class="form-control btn btn-warning btn-lg" value="Submit">Gönder</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="address row mt-lg-5">

                <div class="col-md-4 address-grid" data-aos="flip-up">
                    <div class="address-info">
                        <div class="address-left text-center">
                            <i class="far fa-map"></i>
                        </div>
                        <div class="address-right text-center">
                            <h6 class="my-3">Adres</h6>
                            <p>
                                istanbul, Türkiye

                            </p>
                        </div>
                    </div>

                </div>
                <div class="col-md-4 address-grid" data-aos="flip-up">
                    <div class="address-info">
                        <div class="address-left text-center">
                            <i class="far fa-envelope"></i>
                        </div>
                        <div class="address-right text-center">
                            <h6 class="my-3">Mail</h6>
                            <p>
                                Mail :
                                <a href="mailto:example@email.com"> mail@example.com</a>

                            </p>
                        </div>

                    </div>
                </div>
                <div class="col-md-4 address-grid" data-aos="flip-up">
                    <div class="address-info">
                        <div class="address-left text-center">
                            <i class="fas fa-mobile-alt"></i>
                        </div>
                        <div class="address-right text-center">
                            <h6 class="my-3">Telefon</h6>
                            <p>+90 234 567 8901</p>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>

    $('#btn1').click(function () {
        swal({
            icon: "success",
            Text:"Mesaj Gönderildi",
        });
    });

</script>