
@model EntityLayer.Concrete.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Kategori Ekle</h2>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Name,"",new {@class="text-danger"})
    </div>

    <div class="form-group">
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.Aciklama,6,6, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Kategori Kaydet</button>
}
