
@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "CreateHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h2>Yeni Başlık Oluştur</h2>
<hr />

@using (Html.BeginForm("CreateHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (SelectList)ViewBag.categoryValues, "Kategori Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })
    </div>


    <button type="submit" class="btn btn-primary">Başlık Kaydet</button>
    <a href="/WriterPanel/MyHeading/" class="btn btn-secondary">Vazgeç</a>
}