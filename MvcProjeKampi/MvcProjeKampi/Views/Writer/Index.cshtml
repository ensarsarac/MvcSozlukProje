
@model List<EntityLayer.Concrete.Writer>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-12">
                            <h1>Yazarlar Paneli</h1>
                            <hr />
                        </div>
                      
                    </div>
                    <div class="row my-3">
                        <a href="/Writer/AddWriter/" class="btn btn-primary">Yeni Yazar Ekle</a>
                    </div>
                    </div>
                </><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">

                <!-- Default box -->
                <div class="card card-solid">
                    <div class="card-body pb-0">
                        <div class="row d-flex align-items-stretch">
                            @foreach (var item in Model)
                            {
                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                    <div class="card bg-light">
                                        <div class="card-header text-muted border-bottom-0">
                                            @item.Title
                                        </div>
                                        <div class="card-body pt-0">
                                            <div class="row">
                                                <div class="col-7">
                                                    <h2 class="lead"><b>@item.Name @item.Surname</b></h2>
                                                    <p class="text-muted text-sm"><b>Hakkında: </b> @item.About </p>
                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-mail-bulk"></i></span> Mail: @item.Mail</li>
                                                        
                                                    </ul>
                                                </div>
                                                <div class="col-5 text-center">
                                                    <img src="~/WriterImages/@item.Image" style="width:128px; height:128px;" alt="" class="img-circle img-fluid mt-2">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="text-right">
                                                <a href="#" class="btn btn-sm bg-teal">
                                                    <i class="fas fa-comments"></i>
                                                    Yazarın Başlıkları
                                                </a>
                                                <a href="/Writer/UpdateWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-user"></i> Profili Düzenle
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }


                        </div>
                    </div>

                </div>
            </section>
