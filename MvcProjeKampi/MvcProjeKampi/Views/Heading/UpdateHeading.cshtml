
@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "UpdateHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Başlık Düzenleme Sayfası</h2>
<hr />

@using (Html.BeginForm("UpdateHeading", "Heading", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.HeadingID)
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x=>x.Name,"",new {@class="text-danger"})
    </div>

    <div class="form-group">
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (SelectList)ViewBag.categoryValues, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.WriterID, (SelectList)ViewBag.writervalues, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterID, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Başlık Güncelle</button>
    <a href="/Heading/Index/" class="btn btn-secondary">Vazgeç</a>

}
