
@model EntityLayer.Concrete.Heading

@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Başlık Oluştur</h2>
<hr />

@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Kategori")
        @Html.DropDownListFor(x => x.CategoryID, (SelectList)ViewBag.categoryValues, "Kategori Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryID, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.Label("Yazar")
        @Html.DropDownListFor(x => x.WriterID, (SelectList)ViewBag.writervalues, "Yazar Seçiniz", new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.WriterID, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Başlık Kaydet</button>
    <a href="/Heading/Index/" class="btn btn-secondary">Vazgeç</a>
}